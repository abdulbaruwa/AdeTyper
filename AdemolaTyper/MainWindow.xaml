<Window x:Class="AdemolaTyper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Views="clr-namespace:AdemolaTyper.Views" xmlns:Control="clr-namespace:AdemolaTyper.Control" Title="MainWindow" Height="350" Width="525" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp" TextInput="Window_TextInput">
    <Window.Resources>
        <ResourceDictionary Source="MainResourceDictionary1.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="436*" />
            <ColumnDefinition Width="67*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="{Binding WordsPerMinute, Mode=OneWay}" />
        <ItemsControl Grid.Row="1" ItemsSource="{Binding Words}" ItemTemplate="{StaticResource WordsTemplate}" Grid.ColumnSpan="2">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <!--<view:BubbleCanvas Loaded="HandleBubbleCanvasLoaded" />-->
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</Window>
